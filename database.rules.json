{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "tickets": {
      ".read": "auth != null",
      "$ticketId": {
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)"
      }
    },
    "events": {
      ".read": true,
      ".write": false
    },
    "market_data": {
      ".read": true,
      ".write": false
    }
  }
}
